{
    "compilerOptions": {
        "strict": true,
        "module": "ES2022",
        "target": "ES2022",
        "rootDir": "./src/",
        "outDir": "./dist/",
        // "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src", "types"]
}